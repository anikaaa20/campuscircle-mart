    <div>
      <a href="/">Home</a>
      <% if (user) { %>
        <a href="/my-listings">My Listings</a>
        <a href="/listings/new">Sell Item</a>
        <span>ğŸ‘‹ <%= user.name %></span>
        <a href="/logout">Logout</a>
      <% } else { %>
