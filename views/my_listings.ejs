        <a href="/register">Register</a>
      <% } %>
    </div>
  </nav>

  <main>
    <h2>ğŸ§¾ My Listings</h2>

    <% if (listings.length === 0) { %>
      <p>You haven't posted anything yet. <a href="/listings/new">Sell your first item â†’</a></p>
    <% } else { %>
      <div class="listings-grid">
        <% listings.forEach(l => { %>
          <div class="listing-card">
            <h3><a href="/listings/<%= l.id %>"><%= l.title %></a></h3>
            <p><strong>â‚¹<%= l.price %></strong> â€¢ <%= l.category %> â€¢ <%= l.item_condition %></p>
            <p>Status: <%= l.status %></p>
            <form method="POST" action="/listings/<%= l.id %>/mark-sold">
              <% if (l.status === 'active') { %>
                <button type="submit">Mark as Sold</button>
              <% } else { %>
                <button type="submit" disabled>Already Sold</button>
              <% } %>
            </form>
          </div>
        <% }) %>
      </div>
    <% } %>
  </main>
</body>
</html>
